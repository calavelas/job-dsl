import jenkins.*
import jenkins.model.*
import hudson.*
import hudson.model.*

def projectFolders = [
  	'next-dev' : ['Build-Deploy'],
]

import jenkins.*
import jenkins.model.*
import hudson.*
import hudson.model.*

jenkins = Jenkins.instance

def String[] allJobs = jenkins.getAllItems(Job.class).fullName
def String[] allItems = jenkins.getAllItems(Item.class).fullName

def targetJobs = [
    'backend/channel-api/test1',
    'backend/channel-api/test2',
    'backend/channel-api/test3',
    'backend/channel-api/test4',
    'backend/batch/test5',
    'backend/batch/test6',
    'backend/common-api/test7'
]

// def feJobs = [
// 	'frontend/back-office-web'
// ]

projectFolders.each { projectFolderMap ->
  def projectFolder = projectFolderMap.getKey()
  def projectName = projectFolder.split('-')[0] //{projectName -> Ex next}
  def environment = projectFolder.split('-')[-1] //{env -> Ex : dev}
  def subJobs = projectFolders[projectFolder] //{subJob -> Ex : Build}
  println "Starting ${projectFolder}"
  println "projectName : ${projectName}"
  println "enviroment : ${environment}"
  println "Subjob :  ${subJobs}"

  if (jenkins.getItem("${projectName}/${environment}") == null) {
    
    def folderStructure = jenkins.getItemByFullName("pipeline-template/folder-structure")
    def tempTargetPath =  jenkins.getItemByFullName("${projectName}")
    jenkins.copy(folderStructure, environment)
    Items.move(temp, tempTargetPath)
      
  }

  def existingJobs = allJobs.findAll { job -> job.contains(projectFolder) }
  def existingItems = allItems.findAll { job -> job.contains(projectFolder)}
  println "existingJobs :  ${existingJobs}"
  println "existingItems :  ${existingItems}"
  
  targetJobs.each { job ->

    if(!existingJobs.any { existingJob -> existingJob.contains(job) } ) {
      
      def mainFolder = job.split('/')[0] //{mainType -> Ex : backend}
      def serviceType = job.split('/')[1]
      def repositoryName = job.split('/')[-1]
      println "Start Job :  ${mainFolder}/${serviceType}/${repositoryName}"

      // def templateSubFolder = ''
      // switch (mainFolder) {
      // 	case 'frontend':
      //   	templateSubFolder = 'frontend'
      //   	break
      //   default:
      //   	templateSubFolder = 'microservice'
      //   	break
      // }
      

      def template = jenkins.getItemByFullName("${projectName}/pipeline-management/pipeline-template/template-${environment}/${serviceType}")
      println "template : ${template}"
      //println "template : ${projectName}/pipeline-management/pipeline-template/template-${environment}/${serviceType}"
      
      def targetPath = jenkins.getItemByFullName("${projectName}/${environment}/${mainFolder}/${serviceType}")
      println "targetPath : ${targetPath}" //next/dev/backend/channel-api/mobile-profiles/test
    
      try {
         
        jenkins.copy(template, repositoryName)
        def temp = jenkins.getItemByFullName(repositoryName)
        Items.move(temp, targetPath)
        println "Created ${projectFolder}/${job}"
        
        // switch (mainFolder) {
        //   case 'frontend':
        //       subJobs = ['Deploy']
        //       break
        //   default:
        //       break
        // }
        
        subJobs.each { subJob ->
          println "subJob : ${subJob}"
          def tempSubJobPath = "${projectName}/${environment}/${mainFolder}/${serviceType}/${repositoryName}/${subJob}"
          def tempSubJob = jenkins.getItemByFullName(tempSubJobPath)
          tempSubJob.save()
          println "Saved subJob parameter : ${subJob}"                                    
        }
        
      } catch (Exception err) {
        
        def temp = jenkins.getItemByFullName(repositoryName)
        println err.message
        Items.delete(temp)
        
      }
    } 
  }
}
